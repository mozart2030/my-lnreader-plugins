{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LNReader Plugins Schema",
  "type": "object",
  "properties": {
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "site": { "type": "string", "format": "uri" },
          "lang": { "type": "string" }
        },
        "required": ["id", "name", "site"]
      }
    }
  },
  "required": ["plugins"]
}
